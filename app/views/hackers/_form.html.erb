<%= form_for(@hacker) do |f| %>
  <% if @hacker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hacker.errors.count, "error") %> prohibited this hacker from being saved:</h2>

      <ul>
      <% @hacker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form">
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :fname %><br>
        <%= f.text_field :fname %>
      </div>
      <div class="field">
        <%= f.label :lname %><br>
        <%= f.text_field :lname %>
      </div>
      <div class="field">
        <%= f.label :status %><br>
        <%= f.collection_select :status_id, @statuses, :id, :name, {:include_blank => "Please select"} %>
      </div>
      <div class="field">
        <%= f.label :rating %><br>
        <%= f.text_field :rating %>
      </div>
      <div class="field">
        <%= f.label :school %><br>
        <%= f.collection_select :school_id, @schools, :id, :name, {:include_blank => "Please select"} %>
      <div class="field">
        <%= f.label :team %><br>
        <%= f.collection_select :team_id, @teams, :id, :members, {:include_blank => "Please select"} %>
      </div>
      <div class="field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
      </div>
      <div class="field">
        <%= f.label :github %><br>
        <%= f.text_field :github %>
      </div>
      <div class="field">
        <%= f.label :tshirt_size %><br>
        <%= f.text_field :tshirt_size %>
      </div>
      <div class="field">
        <%= f.label :why %><br>
        <%= f.text_area :why, :cols => 50, :rows => 10 %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>