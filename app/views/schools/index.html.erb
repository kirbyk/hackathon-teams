<h1>
  Schools
  <% if can? :create, @schools %>
    <%= link_to 'New School', new_school_path, class: 'btn btn-primary' %>
  <% end %>
</h1>

<table class="table table-striped" id="clickable">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "School.hackers.count" %></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr class="clickable pointer" href="<%= school_path(school) %>">
        <td><%= school.name %></td>
        <td><%= school.hackers.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
