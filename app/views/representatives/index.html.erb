<h1>
  Representatives
  <%= link_to new_representative_path, class: 'btn btn-primary' do %>
    New Representative
  <% end %>
</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Title</th>
      <th>Email</th>
      <th>Sponsor</th>
    </tr>
  </thead>

  <tbody>
    <% @representatives.each do |representative| %>
      <tr class="clickable pointer" href="<%= representative_path(representative) %>">
        <td><%= representative.fname %></td>
        <td><%= representative.lname %></td>
        <td><%= representative.title %></td>
        <td><%= representative.email %></td>
        <td><%= representative.sponsor.company_name if representative.sponsor %></td>
      </tr>
    <% end %>
  </tbody>
</table>
