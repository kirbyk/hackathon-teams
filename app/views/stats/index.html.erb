<h1>Stats</h1>

<table class="table table-striped">
  <thead>
    <th>School</th>
    <th>Committed</th>
    <th>Accepted</th>
    <th>Declined</th>
    <th>Waitlisted</th>
    <th>Rejected</th>
    <th>Applicants</th>
  </thead>
  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school %></td>
        <td><%= @committed[school] %></td>
        <td><%= @accepted[school] %></td>
        <td><%= @declined[school] %></td>
        <td><%= @waitlisted[school] %></td>
        <td><%= @rejected[school] %></td>
        <td><%= @applied[school] %></td>
      </tr>
    <% end %>
      <tr>
        <td>Other Schools</td>
        <td><%= @other[:committed] %></td>
        <td><%= @other[:accepted] %></td>
        <td><%= @other[:declined] %></td>
        <td><%= @other[:waitlisted] %></td>
        <td><%= @other[:rejected] %></td>
        <td><%= @other[:applied] %></td>
      </tr>
      <tr>
        <td>Total</td>
        <td><%= @total[:committed] %></td>
        <td><%= @total[:accepted] %></td>
        <td><%= @total[:declined] %></td>
        <td><%= @total[:waitlisted] %></td>
        <td><%= @total[:rejected] %></td>
        <td><%= @total[:applied] %></td>
      </tr>
  </tbody>
</table>
