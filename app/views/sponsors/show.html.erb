<div class="panel panel-default">
  <div class="panel-heading">
  	<h1><%= @sponsor.company_name %></h1>
  </div>
  <ul class="list-group">
		<li class="list-group-item">
		  <strong>Company name:</strong>
		  <%= @sponsor.company_name %>
		</li>

		<li class="list-group-item">
		  <strong>Tier:</strong>
		  <%= @sponsor.tier %>
		</li>

		<li class="list-group-item">
		  <strong>Money given:</strong>
		  <%= @sponsor.money_given %>
		</li>

		<li class="list-group-item">
		  <strong>Tech talk time:</strong>
		  <%= @sponsor.tech_talk_time %>
		</li>

		<li class="list-group-item">
		  <strong>Has paid:</strong>
		  <%= @sponsor.has_paid %>
