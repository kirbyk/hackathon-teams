<h1>Listing sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Company name</th>
      <th>Tier</th>
      <th>Money given</th>
      <th>Has paid</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.company_name %></td>
        <td><%= sponsor.tier %></td>
        <td><%= sponsor.money_given %></td>
        <td><%= sponsor.has_paid %></td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

